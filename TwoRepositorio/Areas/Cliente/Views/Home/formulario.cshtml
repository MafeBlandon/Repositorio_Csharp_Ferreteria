@{
    ViewData["Title"] = "Home Page";
}
<h4>Herramientas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <form role = "form">

                   <div class = "form-group">
                      <label for = "name">Nombre </label>
                      <input type = "text" class = "form-control" id = "name" placeholder = "Ingrese nombre de la Herramienta">
                   </div>
                    <div class = "form-group">
                      <label for = "name">Valor </label>
                      <input type = "number" class = "form-control" id = "name" placeholder = "Ingrese valor de la Herramienta">
                   </div>
                    <div class = "form-group">
                      <label for = "name">Caracteristicas </label>
                        <textarea class="form-control" rows="5" id="comentarios" name="comentarios" placeholder = "Ingrese sus caracteristicas"></textarea>
                      
                   </div>
   
                   <div class = "form-group">
                      <label for = "inputfile">Imagen de la herramienta</label>
                      <input type = "file" id = "inputfile">
                      <p class = "help-block"></p>
                   </div>
   
                   <div class = "checkbox">
                      <label><input type = "checkbox"> Activo </label>
                   </div>
   
                   <button type = "submit" class = "btn btn-warning">Guardar</button>
        </form>
    </div>
</div>